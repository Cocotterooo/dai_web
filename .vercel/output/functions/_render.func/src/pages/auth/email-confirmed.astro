---
import Layout from "../../layouts/Layout.astro";
import AuthLayout from "../../layouts/AuthLayout.astro";

// Verificar si viene de la confirmación por email
const message = Astro.url.searchParams.get("message");
const fromEmail = message === "email_confirmed";
---

<Layout title="Email Confirmado - DAI">
    <AuthLayout>
        <div class="max-w-md mx-auto bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl p-8 border border-green-100">
            <!-- Icono de éxito -->
            <div class="text-center mb-6">
                <div class="mx-auto w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mb-4">
                    <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                </div>
                <h1 class="text-2xl font-bold text-gray-800 mb-2">
                    ¡Email confirmado!
                </h1>
            </div>

            <!-- Mensaje principal -->
            <div class="text-center mb-8">
                <p class="text-gray-600 mb-4">
                    Tu cuenta ha sido activada exitosamente.
                </p>
                <p class="text-sm text-gray-500 mb-6">
                    Ya puedes acceder a todas las funcionalidades de tu cuenta DAI.
                </p>
                
                <!-- Indicador de éxito -->
                <div class="flex items-center justify-center space-x-2 text-green-600 mb-6">
                    <div class="w-5 h-5 bg-green-500 rounded-full flex items-center justify-center">
                        <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                    </div>
                    <span class="font-medium">Cuenta activada</span>
                </div>
            </div>

            <!-- Información adicional -->
            <div class="bg-green-50 rounded-lg p-4 mb-6">
                <h3 class="font-semibold text-green-700 mb-2">¿Qué puedes hacer ahora?</h3>
                <ul class="text-sm text-green-600 space-y-1">
                    <li>• Acceder al panel de control</li>
                    <li>• Completar tu perfil</li>
                    <li>• Explorar nuestros servicios</li>
                    <li>• Mantenerte al día con las noticias</li>
                </ul>
            </div>

            <!-- Botón de acción principal -->
            <div class="space-y-4">
                <a href="/profile" class="block w-full text-center bg-green-600 hover:bg-green-700 text-white font-medium py-3 px-4 rounded-lg transition duration-300">
                    Ir al Panel de Control
                </a>
                
                <a href="/complete-profile" class="block w-full text-center bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg transition duration-300">
                    Completar Perfil
                </a>
                
                <a href="/" class="block w-full text-center bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-3 px-4 rounded-lg transition duration-300">
                    Volver al inicio
                </a>
            </div>
        </div>

        <!-- Auto-redirect después de unos segundos si no interactúa -->
        <script define:vars={{ fromEmail }}>
            // Si viene desde confirmación por email, auto-redirigir después de 5 segundos
            if (fromEmail) {
                let countdown = 5;
                const redirectMessage = document.createElement('p');
                redirectMessage.className = 'text-center text-sm text-gray-500 mt-4';
                redirectMessage.id = 'redirect-countdown';
                document.querySelector('.max-w-md').appendChild(redirectMessage);
                
                const updateCountdown = () => {
                    redirectMessage.textContent = `Redirigiendo al panel de control en ${countdown} segundos...`;
                    countdown--;
                    
                    if (countdown < 0) {
                        window.location.href = '/profile';
                    }
                };
                
                updateCountdown();
                const interval = setInterval(updateCountdown, 1000);
                
                // Cancelar auto-redirect si el usuario interactúa
                document.addEventListener('click', () => {
                    clearInterval(interval);
                    redirectMessage.remove();
                });
            }
        </script>
    </AuthLayout>
</Layout>
