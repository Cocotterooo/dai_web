---
import Layout from '@/layouts/Layout.astro';
import UserRoleManager from '@/components/admin/UserRoleManager.astro';
import RoleManager from '@/components/admin/RoleManager.astro';

const user = Astro.locals.user;
const userRoleIds = Astro.locals.userRoleIds || [];
const isAuthenticated = !!user;

// Verificar si el usuario tiene permisos de admin (usando role_id)
const isAdmin = ((userRoleIds as unknown) as string[]).includes('admin') || ((userRoleIds as unknown) as string[]).includes('dai_communication_coord');

// Si no est√° autenticado o no es admin, redirigir
if (!isAuthenticated) {
    return Astro.redirect('/auth');
}

if (!isAdmin) {
    return Astro.redirect('/profile?error=insufficient_permissions');
}
---

<Layout>
    <div class="min-h-screen bg-gradient-to-br from-azul-oscuro via-azul-oscuro/95 to-azul-oscuro pt-20 pb-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Encabezado -->
            <div class="text-center mb-12">
                <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
                    Panel de <span class="text-dai">Administraci√≥n</span>
                </h1>
                <p class="text-xl text-white/80 max-w-3xl mx-auto">
                    Gestiona usuarios, roles y configuraciones del sistema
                </p>
            </div>

            <!-- Estad√≠sticas r√°pidas -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
                <div class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-xl p-6 text-center">
                    <div class="text-3xl font-bold text-dai mb-2" id="total-users">-</div>
                    <div class="text-white/80">Usuarios Totales</div>
                </div>
                
                <div class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-xl p-6 text-center">
                    <div class="text-3xl font-bold text-green-400 mb-2" id="active-users">-</div>
                    <div class="text-white/80">Usuarios Activos</div>
                </div>
                
                <div class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-xl p-6 text-center">
                    <div class="text-3xl font-bold text-yellow-400 mb-2" id="admin-users">-</div>
                    <div class="text-white/80">Administradores</div>
                </div>
            </div>

            <!-- Panel de navegaci√≥n -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
                <!-- Navegaci√≥n de secciones -->
                <div class="lg:col-span-1">
                    <div class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-xl p-6">
                        <h3 class="text-lg font-semibold text-white mb-4">Secciones</h3>
                        <nav class="space-y-2">
                            <button 
                                class="admin-nav-btn active w-full text-left px-4 py-3 rounded-lg transition-colors duration-200 bg-dai/20 text-dai font-medium" 
                                data-section="users"
                            >
                                üë• Gesti√≥n de Usuarios
                            </button>
                            <button 
                                class="admin-nav-btn w-full text-left px-4 py-3 rounded-lg transition-colors duration-200 text-white/80 hover:bg-white/10 hover:text-white" 
                                data-section="roles"
                            >
                                üè∑Ô∏è Gesti√≥n de Roles
                            </button>
                            <button 
                                class="admin-nav-btn w-full text-left px-4 py-3 rounded-lg transition-colors duration-200 text-white/80 hover:bg-white/10 hover:text-white" 
                                data-section="system"
                            >
                                ‚öôÔ∏è Configuraci√≥n del Sistema
                            </button>
                        </nav>
                    </div>
                </div>

                <!-- Contenido principal -->
                <div class="lg:col-span-2">
                    <!-- Secci√≥n de Usuarios -->
                    <div id="users-section" class="admin-section">
                        <div class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-xl p-6">
                            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
                                <h3 class="text-xl font-semibold text-white mb-4 sm:mb-0">Gesti√≥n de Usuarios</h3>
                                <button 
                                    id="refresh-users-btn"
                                    class="px-4 py-2 bg-dai hover:bg-dai/80 text-white rounded-lg transition-colors duration-200 flex items-center gap-2"
                                >
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                                    </svg>
                                    Actualizar
                                </button>
                            </div>
                            
                            <!-- Buscador de usuarios -->
                            <div class="mb-6">
                                <input 
                                    type="text" 
                                    id="user-search"
                                    placeholder="Buscar usuarios por email..."
                                    class="w-full px-4 py-3 bg-azul-oscuro border border-white/30 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-azul-brillante"
                                >
                            </div>

                            <!-- Lista de usuarios -->
                            <div id="users-list" class="space-y-4">
                                <div class="text-center text-white/60 py-8">
                                    Cargando usuarios...
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Secci√≥n de Roles -->
                    <div id="roles-section" class="admin-section hidden">
                        <div class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-xl p-6">
                            <h3 class="text-xl font-semibold text-white mb-6">Gesti√≥n de Roles</h3>
                            <div class="text-center text-white/60 py-8">
                                <p>Pr√≥ximamente: Gesti√≥n avanzada de roles y permisos</p>
                            </div>
                        </div>
                    </div>

                    <!-- Secci√≥n de Sistema -->
                    <div id="system-section" class="admin-section hidden">
                        <div class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-xl p-6">
                            <h3 class="text-xl font-semibold text-white mb-6">Configuraci√≥n del Sistema</h3>
                            <div class="text-center text-white/60 py-8">
                                <p>Pr√≥ximamente: Configuraciones globales del sistema</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal para gestionar roles de usuario -->
            <div id="user-roles-modal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 hidden">
                <div class="flex items-center justify-center min-h-screen p-4">
                    <div class="bg-azul-oscuro border border-white/20 rounded-xl p-6 max-w-2xl w-full max-h-[90vh] overflow-y-auto">
                        <div class="flex items-center justify-between mb-6">
                            <h3 class="text-xl font-semibold text-white">Gestionar Roles de Usuario</h3>
                            <button id="close-modal-btn" class="text-white/60 hover:text-white p-2">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                            </button>
                        </div>
                        <div id="user-roles-content">
                            <!-- El contenido se cargar√° din√°micamente -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script is:inline>
        // Estado global
        var allUsers = [];
        var currentUser = null;

        // Inicializaci√≥n
        document.addEventListener('DOMContentLoaded', function() {
            loadStats();
            loadUsers();
            setupEventListeners();
        });

        // Configurar event listeners
        function setupEventListeners() {
            // Navegaci√≥n entre secciones
            document.querySelectorAll('.admin-nav-btn').forEach(function(btn) {
                btn.addEventListener('click', function() {
                    var section = this.getAttribute('data-section');
                    switchSection(section);
                });
            });

            // B√∫squeda de usuarios
            var userSearch = document.getElementById('user-search');
            if (userSearch) {
                userSearch.addEventListener('input', function() {
                    filterUsers(this.value);
                });
            }

            // Bot√≥n refresh
            var refreshBtn = document.getElementById('refresh-users-btn');
            if (refreshBtn) {
                refreshBtn.addEventListener('click', loadUsers);
            }

            // Modal
            var closeModalBtn = document.getElementById('close-modal-btn');
            if (closeModalBtn) {
                closeModalBtn.addEventListener('click', closeModal);
            }

            // Cerrar modal al hacer clic fuera
            var modal = document.getElementById('user-roles-modal');
            if (modal) {
                modal.addEventListener('click', function(e) {
                    if (e.target === this) {
                        closeModal();
                    }
                });
            }
        }

        // Cambiar secci√≥n
        function switchSection(sectionName) {
            // Actualizar navegaci√≥n
            document.querySelectorAll('.admin-nav-btn').forEach(function(btn) {
                btn.classList.remove('active', 'bg-dai/20', 'text-dai', 'font-medium');
                btn.classList.add('text-white/80');
            });
            
            var activeBtn = document.querySelector('[data-section="' + sectionName + '"]');
            if (activeBtn) {
                activeBtn.classList.add('active', 'bg-dai/20', 'text-dai', 'font-medium');
                activeBtn.classList.remove('text-white/80');
            }

            // Mostrar/ocultar secciones
            document.querySelectorAll('.admin-section').forEach(function(section) {
                section.classList.add('hidden');
            });
            
            var targetSection = document.getElementById(sectionName + '-section');
            if (targetSection) {
                targetSection.classList.remove('hidden');
            }
        }

        // Cargar estad√≠sticas
        function loadStats() {
            fetch('/api/admin/stats')
                .then(function(response) {
                    if (response.ok) {
                        return response.json();
                    }
                    throw new Error('Error loading stats');
                })
                .then(function(stats) {
                    updateStats(stats);
                })
                .catch(function(error) {
                    console.error('Error loading stats:', error);
                });
        }

        // Actualizar estad√≠sticas
        function updateStats(stats) {
            var totalUsersEl = document.getElementById('total-users');
            var activeUsersEl = document.getElementById('active-users');
            var adminUsersEl = document.getElementById('admin-users');
            
            if (totalUsersEl) totalUsersEl.textContent = stats.totalUsers || 0;
            if (activeUsersEl) activeUsersEl.textContent = stats.activeUsers || 0;
            if (adminUsersEl) adminUsersEl.textContent = stats.adminUsers || 0;
        }

        // Cargar usuarios
        function loadUsers() {
            var usersList = document.getElementById('users-list');
            if (!usersList) return;
            
            usersList.innerHTML = '<div class="text-center text-white/60 py-8">Cargando usuarios...</div>';

            fetch('/api/admin/users')
                .then(function(response) {
                    if (response.ok) {
                        return response.json();
                    }
                    throw new Error('Error al cargar usuarios');
                })
                .then(function(users) {
                    allUsers = users;
                    displayUsers(users);
                })
                .catch(function(error) {
                    console.error('Error loading users:', error);
                    usersList.innerHTML = '<div class="text-center text-red-400 py-8">Error al cargar usuarios</div>';
                });
        }

        // Mostrar usuarios
        function displayUsers(users) {
            var usersList = document.getElementById('users-list');
            if (!usersList) return;
            
            if (!users || users.length === 0) {
                usersList.innerHTML = '<div class="text-center text-white/60 py-8">No se encontraron usuarios</div>';
                return;
            }

            usersList.innerHTML = users.map(function(user) {
                return '<div class="bg-white/5 border border-white/10 rounded-lg p-4 hover:bg-white/10 transition-colors duration-200">' +
                    '<div class="flex items-center justify-between">' +
                        '<div class="flex items-center gap-3">' +
                            (user.avatar_url ? 
                                '<img src="' + user.avatar_url + '" alt="' + (user.full_name || user.email) + '" class="w-10 h-10 rounded-full">' :
                                '<div class="w-10 h-10 bg-dai/20 rounded-full flex items-center justify-center">' +
                                    '<svg class="w-5 h-5 text-dai" fill="none" stroke="currentColor" viewBox="0 0 24 24">' +
                                        '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>' +
                                    '</svg>' +
                                '</div>'
                            ) +
                            '<div>' +
                                '<div class="font-medium text-white">' + (user.full_name || 'Sin nombre') + '</div>' +
                                '<div class="text-sm text-white/60">' + user.email + '</div>' +
                                '<div class="text-xs text-white/40">' +
                                    'Registrado: ' + new Date(user.created_at).toLocaleDateString('es-ES') +
                                '</div>' +
                            '</div>' +
                        '</div>' +
                        '<button onclick="openUserRolesModal(\'' + user.id + '\', \'' + (user.full_name || user.email) + '\')" ' +
                            'class="px-4 py-2 bg-dai/20 hover:bg-dai/40 text-dai rounded-lg transition-colors duration-200 text-sm">' +
                            'Gestionar Roles' +
                        '</button>' +
                    '</div>' +
                '</div>';
            }).join('');
        }

        // Filtrar usuarios
        function filterUsers(query) {
            if (!query.trim()) {
                displayUsers(allUsers);
                return;
            }

            var filtered = allUsers.filter(function(user) {
                return user.email.toLowerCase().includes(query.toLowerCase()) ||
                       (user.full_name && user.full_name.toLowerCase().includes(query.toLowerCase()));
            });
            
            displayUsers(filtered);
        }

        // Abrir modal de roles
        function openUserRolesModal(userId, userName) {
            currentUser = { id: userId, name: userName };
            var modal = document.getElementById('user-roles-modal');
            var content = document.getElementById('user-roles-content');
            
            if (!modal || !content) return;
            
            // Mostrar loading
            content.innerHTML = '<div class="text-center text-white/60 py-8">Cargando...</div>';
            modal.classList.remove('hidden');

            // Cargar contenido del modal
            loadUserRolesContent(userId, userName);
        }

        // Cargar contenido de roles del usuario
        function loadUserRolesContent(userId, userName) {
            fetch('/api/admin/users/' + userId + '/roles')
                .then(function(response) {
                    if (response.ok) {
                        return response.json();
                    }
                    throw new Error('Error al cargar roles');
                })
                .then(function(data) {
                    renderUserRolesContent(data, userName);
                })
                .catch(function(error) {
                    console.error('Error loading user roles:', error);
                    var content = document.getElementById('user-roles-content');
                    if (content) {
                        content.innerHTML = '<div class="text-center text-red-400 py-8">Error al cargar roles</div>';
                    }
                });
        }

        // Renderizar contenido de roles
        function renderUserRolesContent(data, userName) {
            var content = document.getElementById('user-roles-content');
            if (!content) return;
            
            content.innerHTML = '<div class="space-y-6">' +
                '<div class="text-lg font-medium text-white">Usuario: ' + userName + '</div>' +
                '<div class="text-white/60">' +
                    '<p>Integraci√≥n con componente UserRoleManager pendiente</p>' +
                    '<p>Roles actuales: ' + (data.roles ? data.roles.length : 0) + '</p>' +
                '</div>' +
            '</div>';
        }

        // Cerrar modal
        function closeModal() {
            var modal = document.getElementById('user-roles-modal');
            if (modal) {
                modal.classList.add('hidden');
            }
            currentUser = null;
        }

        // Exponer funciones globalmente
        window.openUserRolesModal = openUserRolesModal;
    </script>
</Layout>
