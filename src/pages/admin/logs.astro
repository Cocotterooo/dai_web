---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Logs del Sistema - Panel Admin">
    <!-- Header de la página -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-white mb-2">Logs del Sistema</h1>
        <p class="text-white/80">Monitorea la actividad y eventos del sistema DAI</p>
    </div>

    <!-- Próximamente -->
    <div class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-xl p-12 text-center">
        <div class="mb-6">
            <div class="w-24 h-24 mx-auto bg-dai/20 rounded-full flex items-center justify-center mb-4">
                <svg class="w-12 h-12 text-dai" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
            </div>
            <h2 class="text-2xl font-bold text-white mb-3">Logs del Sistema</h2>
            <p class="text-white/70 text-lg mb-6">Esta funcionalidad estará disponible próximamente</p>
            <p class="text-white/60 max-w-md mx-auto">
                Aquí podrás ver los logs de actividad del sistema, 
                errores, accesos de usuarios y eventos importantes.
            </p>
        </div>
        
        <div class="flex justify-center">
            <a 
                href="/admin" 
                class="px-6 py-3 bg-dai hover:bg-dai/80 text-white rounded-lg transition-colors duration-200 flex items-center gap-2"
            >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Volver al Dashboard
            </a>
        </div>
    </div>
</AdminLayout>
