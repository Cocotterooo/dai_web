import { supabase } from "@/lib/supabase";
import { DEV } from "astro:env/server";

// Roles del usuario
const roleIds = Astro.locals.userRoleIds as string[] || [];
const canManageInventory = roleIds.includes("admin") 
                        || roleIds.includes("dai_delegate") 
                        || roleIds.includes("dai_secretary")
                        || roleIds.includes("dai_infrastructure_coord");

interface Family {
    id: number;
    name: string;
    description: string | null;
    created_at: string;
    parent_id: number | null;
    loanable_time: number | null;
    color: string | null;
    icon: string | null;
}

interface StockObject {
    id: number;
    name: string;
    details: string | null;
    created_at: string;
    object_id: number;
    min_stock: number;
    amount: number;
    saved_in: string | null;
    image_url: string | null;
    place: "city" | "campus";
}

interface UnitObject {
    custom_id: string;
    name: string | null;
    details: string | null;
    object_id: number;
    created_at: string;
    state: "available" | "loaned" | "maintenance" | "broken" | "lost" | "reserved";
    serial_number: string | null;
    saved_in: string | null;
    image_url: string | null;
    place: "city" | "campus";
}

interface Loan {
    id: number;
    object_id: number;
    custom_id: string | null;
    created_at: string;
    place: "city" | "campus";
    loaned_to: string;
    loaned_by: string;
    return_deadline: string;
    collected_by: string | null;
}

interface DisplayItem {
    id: string;
    object_id?: number;
    name: string;
    family_id?: number;
    family_name?: string;
    is_fungible: boolean;
    place: "city" | "campus";
    created_at: string;
    amount?: number;
    min_stock?: number;
    state?: "available" | "loaned" | "maintenance" | "broken" | "lost" | "reserved";
    custom_id?: string;
    saved_in?: string | null;
    serial_number?: string | null;
    image_url?: string | null;
    details?: string | null;
    custom_loan_days?: number | null;
    loans?: Loan[];
}

interface ExtendedFamily extends Family {
    level?: number;
    children?: Family[];
    stock_objects?: StockObject[];
    unit_objects?: UnitObject[];
}

// VARIABLES INICIALES:
let families: ExtendedFamily[] = [];
let itemsUnitObjects: UnitObject[] = [];
let itemsStockObjects: StockObject[] = [];
let items: DisplayItem[] = [];  
let stats = {
    total_categories: 0,
    total_items: 0,
    fungible_items: 0,
    non_fungible_items: 0,
    items_by_place: { campus: 0, city: 0 },
    low_stock_alerts: 0,
    available_for_loan: 0,
    currently_loaned: 0
};
let error = '';

try {
    // Verificar autenticación y permisos
    const user = Astro.locals.user;
    
    if (!user) {
        throw new Error("No autorizado");
    }

    if (!canManageInventory) {
        throw new Error("Permisos insuficientes para gestionar inventario");
    }
    // console.log("🔐 Permisos verificados para gestión de inventario:", user.email);


    
    // Obtener categorías con jerarquía
    const { data: categoriesData, error: categoriesError } = await supabase
        .rpc("get_families_all");

    if (categoriesError) {
        console.error("❌ Error cargando categorías:", categoriesError);
        throw categoriesError;
    }

    // Obtener items STOCK
    const {data: itemsStockData, error: itemsStockError} = await supabase
        .rpc("get_inventory_stock_all");

    if (itemsStockError) {
        console.error("❌ Error cargando items:", itemsStockError);
        throw itemsStockError;
    }

    // Obtener items UNIT
    const {data: itemsUnitData, error: itemsUnitError} = await supabase
        .rpc("get_inventory_units_all");

    if (itemsUnitError) {
        console.error("❌ Error cargando items:", itemsUnitError);
        throw itemsUnitError;
    }
    console.log(`✅ Cargados ${itemsStockData?.length || 0} items STOCK y ${itemsUnitData?.length || 0} items UNIT`);
    console.log(itemsUnitData)

    const {data: loansData, error: loansError} = await supabase
        .rpc("get_loans_all");
    if (loansError) {
        console.error("❌ Error cargando préstamos:", loansError);
        throw loansError;
    }

    // PROCESAR DATOS SEGÚN INTERFACES:
    
    // Procesar familias
    if (categoriesData) {
        families = (categoriesData as Family[]).map(family => ({
            ...family,
            level: calculateCategoryLevel(family, categoriesData),
            children: [],
            stock_objects: [],
            unit_objects: []
        }));
    }

    // Procesar stock objects
    if (itemsStockData) {
        itemsStockObjects = itemsStockData as StockObject[];
    }

    // Procesar unit objects
    if (itemsUnitData) {
        itemsUnitObjects = itemsUnitData as UnitObject[];
    }

    // Crear display items combinando stock y unit objects
    const stockDisplayItems: DisplayItem[] = itemsStockObjects.map(stock => {
        // Buscar la familia correspondiente al object_id
        const family = families.find(f => f.id === stock.object_id);
        
        return {
            id: `stock_${stock.object_id}`,
            object_id: stock.object_id,
            name: stock.name || `Stock Item ${stock.object_id}`,
            family_id: stock.object_id,
            family_name: family?.name,
            is_fungible: true,
            place: stock.place,
            created_at: stock.created_at,
            amount: stock.amount,
            min_stock: stock.min_stock,
            saved_in: stock.saved_in,
            details: stock.details,
            image_url: stock.image_url,
            custom_loan_days: family?.loanable_time
        };
    });

    // Convertir unit objects a display items
    const unitDisplayItems: DisplayItem[] = itemsUnitObjects.map(unit => {
        // Buscar la familia correspondiente al object_id
        const family = families.find(f => f.id === unit.object_id);
        
        // Buscar préstamos para este objeto
        const objectLoans = (loansData as Loan[] || []).filter(
            loan => loan.object_id === unit.object_id && loan.custom_id === unit.custom_id
        );

        return {
            id: `unit_${unit.object_id}_${unit.custom_id}`,
            object_id: unit.object_id,
            name: unit.name || `Unit ${unit.custom_id}`,
            family_id: unit.object_id,
            family_name: family?.name,
            is_fungible: false,
            place: unit.place || 'campus',
            created_at: unit.created_at,
            state: unit.state,
            custom_id: unit.custom_id,
            saved_in: unit.saved_in,
            serial_number: unit.serial_number,
            image_url: unit.image_url,
            details: unit.details,
            loans: objectLoans,
            custom_loan_days: family?.loanable_time
        };
    });

    items = [...stockDisplayItems, ...unitDisplayItems];
    
    // Calcular estadísticas
    stats.total_categories = families.length;
    stats.total_items = items.length;
    stats.fungible_items = items.filter(item => item.is_fungible).length;
    stats.non_fungible_items = items.filter(item => !item.is_fungible).length;
    
    stats.items_by_place.campus = items.filter(item => item.place === 'campus').length;
    stats.items_by_place.city = items.filter(item => item.place === 'city').length;
    
    stats.low_stock_alerts = items.filter(item => 
        item.is_fungible && item.min_stock && (item.amount || 0) <= item.min_stock
    ).length;
    
    stats.available_for_loan = items.filter(item => 
        item.is_fungible ? (item.amount || 0) > 0 : item.state === 'available'
    ).length;
    
    stats.currently_loaned = items.filter(item => 
        !item.is_fungible && item.state === 'loaned'
    ).length;

} catch (err) {
    console.error("❌ Error en InventoryManager:", err);
    error = err instanceof Error ? err.message : 'Error desconocido';
}

// Funciones auxiliares para jerarquía
function calculateCategoryLevel(family: Family, allCategories: Family[]): number {
    if (!family.parent_id) return 0;
    const parent = allCategories.find(c => c.id === family.parent_id);
    if (!parent) return 0;
    return 1 + calculateCategoryLevel(parent, allCategories);
}

