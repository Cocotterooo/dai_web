---
import Layout from "@/layouts/Layout.astro";
import SafeUserCard from "@/components/profile/SafeUserCard.astro";
import SafeUserStats from "@/components/profile/SafeUserStats.astro";
import SafeUserHistory from "@/components/profile/SafeUserHistory.astro";

// Los datos del usuario vienen del middleware - no hacer queries aquí
const user = Astro.locals.user;
const email = Astro.locals.email;
const isAuthenticated = !!user;

// Usar datos del middleware para roles (ya cacheados)
const isAdmin = Astro.locals.userRoleNames?.some((role: string) => {
    const adminRoles = ['admin', 'delegado', 'secretario', 'coord_comunicacion', 'coord_ocio_deportes', 'coord_asuntos_externos', 'coord_infraestructuras'];
    return adminRoles.includes(role?.toLowerCase());
}) || false;
---
<Layout title="DAI - Perfil de usuario">
    <section class="w-full max-w-[1400px] mx-auto p-20">
        <div class="flex justify-between items-center mb-8">
            <h1 class="font-semibold text-3xl text-white">Perfil de Usuario</h1>
            <div class="flex gap-4">
                {isAdmin && (
                    <a 
                        href="/admin"
                        class="bg-white/10 hover:bg-white/20 border-1 border-azul-brillante/20 text-azul-brillante px-4 py-2 rounded-lg transition-colors duration-300"
                    >
                        Panel Administración
                    </a>
                )}
                <a 
                    href="/api/auth/signout"
                    class="bg-red-600/30 border-1 border-red-800 hover:bg-red-600/40 text-white px-4 py-2 rounded-lg transition-colors duration-300"
                >
                    Cerrar sesión
                </a>
            </div>
        </div>
        
        <div class="grid grid-cols-10 auto-rows-[35rem] gap-4">
            <SafeUserCard user={user}/>
            <SafeUserStats user={user}/>
            <SafeUserHistory />
        </div>
    </section> 
</Layout>