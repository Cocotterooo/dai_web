---
import Layout from "@/layouts/Layout.astro";
import SafeUserCard from "@/components/profile/user-card.astro";
import SafeUserStats from "@/components/profile/user-info/index.astro";
import SafeUserHistory from "@/components/profile/SafeUserHistory.astro";
import IncompleteProfileAlert from "@/components/profile/IncompleteProfileAlert.astro";

// Los datos del usuario vienen del middleware - no hacer queries aquí
const user = Astro.locals.user;
const email = Astro.locals.email;
const isAuthenticated = !!user;

// Usar datos del middleware para roles (ya cacheados)
const isAdmin = Astro.locals.userRoleNames?.some((role: string) => {
    const adminRoles = ['admin', 'delegado', 'secretario', 'coord_comunicacion', 'coord_ocio_deportes', 'coord_asuntos_externos', 'coord_infraestructuras'];
    return adminRoles.includes(role?.toLowerCase());
}) || false;
---
<Layout title="DAI - Perfil de usuario">
    <section class="w-full max-w-[1400px] mx-auto px-4 sm:px-8 lg:px-20 pt-26 sm:py-12 lg:py-20">
        <div class="flex flex-row justify-between items-center mb-6 sm:mb-8 gap-4">
            <h1 class="font-semibold text-2xl sm:text-3xl text-white">
                <span class="sm:hidden">Perfil</span>
                <span class="hidden sm:block">Perfil de Usuario</span>
            </h1>
            <div class="flex gap-2 sm:gap-4">
                {isAdmin && (
                    <a 
                        href="/admin"
                        class="hidden sm:flex bg-white/10 hover:bg-white/20 border-1 border-azul-brillante/20 text-azul-brillante px-3 sm:px-4 py-2 rounded-lg transition-colors duration-300 text-sm text-center whitespace-nowrap"
                    >
                        Panel Administración
                    </a>
                )}
                <a 
                    href="/api/auth/signout"
                    class="bg-red-600/30 border-1 border-red-800 hover:bg-red-600/40 text-white px-3 sm:px-4 py-2 rounded-lg transition-colors duration-300 text-sm text-center whitespace-nowrap"
                >
                    <span class="sm:hidden">Cerrar Sesión</span>
                    <span class="hidden sm:block">Cerrar sesión</span>
                </a>
            </div>
        </div>
        
        <!-- Alerta de perfil incompleto -->
        <IncompleteProfileAlert user={user} />
        
        <div class="grid grid-cols-1 lg:grid-cols-10 gap-4 auto-rows-max lg:auto-rows-[35rem] place-items-center lg:place-items-stretch">
            <SafeUserCard user={user}/>
            <SafeUserStats user={user}/>
            <SafeUserHistory />
        </div>
    </section> 
</Layout>