---
const { title, description, image, date } = Astro.props;
---

<article class="bg-linear-to-br from-blue-950/20 to-dai/25 border-0 border-dai/80 rounded-xl mb-4 backdrop-blur-md h-full">
  {image && (
    <img
      src={image}
      alt={`Imagen relacionada con ${title}`}
      class="w-full h-48 object-cover rounded-t-xl border-b-4 border-dai/80"
    />
  )}
  <header class="p-4">
    <h2 class="text-xl font-semibold text-white mb-2">{title}</h2>
  </header>
  <section class="flex flex-col justify-start p-4 pt-0 text-left">
    <p class="text-center text-balance sm:text-left text-white/60 mb-5">{description}</p>
    {date && (
      <time
        datetime={new Date(date).toISOString()}
        class="absolute bottom-3 right-4 text-pretty text-white/60"
      >
        {date}
      </time>
    )}
  </section>
</article>
