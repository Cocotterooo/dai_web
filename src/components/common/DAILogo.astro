---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  className?: string;
}

const { size = 'md', className = '' } = Astro.props;

const sizeClasses = {
  sm: 'h-8 w-auto',
  md: 'h-16 w-auto',
  lg: 'h-24 w-auto',
};
---

<img 
  src="/Símbolo_DAI_texto.png" 
  alt="Delegación de Alumnado de Industriales - Logo" 
  class={`${sizeClasses[size]} ${className}`}
  loading="lazy"
/>
