---
interface Props {
  type?: 'text' | 'email' | 'password' | 'number' | 'tel' | 'url';
  placeholder?: string;
  value?: string;
  name?: string;
  id?: string;
  required?: boolean;
  disabled?: boolean;
  minlength?: number;
  maxlength?: number;
  pattern?: string;
  className?: string;
  variant?: 'default' | 'auth';
}

const { 
  type = 'text',
  placeholder = '',
  value = '',
  name,
  id,
  required = false,
  disabled = false,
  minlength,
  maxlength,
  pattern,
  className = '',
  variant = 'default',
} = Astro.props;

const baseClasses = 'w-full px-4 py-3 rounded-lg transition-all duration-300 focus:outline-none focus:ring-2 focus:border-transparent';

const variantClasses = {
  default: 'bg-white border border-gray-300 text-gray-900 placeholder-gray-500 focus:ring-dai focus:border-dai',
  auth: 'w-full px-3 py-2 bg-white/10 border border-white/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-dai focus:border-transparent text-white placeholder-white/50',
};
---

<input
  type={type}
  placeholder={placeholder}
  value={value}
  name={name}
  id={id}
  required={required}
  disabled={disabled}
  minlength={minlength}
  maxlength={maxlength}
  pattern={pattern}
  class={`${baseClasses} ${variantClasses[variant]} ${className}`}
/>
