---
export interface Props {
user: any;
}

const { user } = Astro.props;

// Verificar si el perfil está completo
const hasPhone = user?.user_metadata?.phone;
const hasDni = user?.user_metadata?.dni;
const hasFullName = user?.user_metadata?.full_name;

const isProfileComplete = hasPhone && hasDni && hasFullName;

// Crear lista de campos faltantes
const missingFields = [];
if (!hasFullName) missingFields.push("nombre completo");
if (!hasDni) missingFields.push("DNI/NIE");
if (!hasPhone) missingFields.push("teléfono");

const missingFieldsText = missingFields.length === 1 
? missingFields[0]
: missingFields.slice(0, -1).join(", ") + " y " + missingFields[missingFields.length - 1];
---

{!isProfileComplete && (
<div class="mb-6 bg-yellow-500/20 border border-yellow-500/40 rounded-lg p-4 backdrop-blur-sm">
    <div class="flex items-start space-x-3">
    <div class="flex-shrink-0">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
        </svg>
    </div>
    <div class="flex-1">
        <h3 class="text-sm font-medium text-yellow-200 mb-1">
        Perfil incompleto
        </h3>
        <p class="text-sm text-yellow-100 mb-3">
        Tu perfil está incompleto. Faltan los siguientes datos: <strong>{missingFieldsText}</strong>. Para acceder a todas las funcionalidades y servicios, necesitas completar tu información personal.
        </p>
        <div class="flex flex-col sm:flex-row gap-2">
        <a 
            href="/complete-profile"
            class="inline-flex items-center text-center bg-yellow-500/10 border border-yellow-500/20 text-yellow-200 py-2 px-4 rounded-lg font-medium hover:bg-yellow-500/20 hover:border-yellow-500/30 focus:outline-none focus:ring-1 focus:ring-dai focus:ring-offset-1 focus:ring-offset-transparent transition-all duration-300 backdrop-blur-sm"
        >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            Completar perfil
        </a>
        {/*}<button 
            type="button"
            onclick="this.parentElement.parentElement.parentElement.parentElement.style.display='none'"
            class="inline-flex items-center px-4 py-2 bg-transparent hover:bg-yellow-500/20 text-yellow-200 text-sm font-medium rounded-lg border border-yellow-500/40 transition-colors duration-300 text-center justify-center cursor-pointer"
        >
            Recordar después
        </button>*/}
        <div>
            <span 
                class="text-sm text-white/60"
            >Al registrarte, aceptarás los</span>
            <a class="text-sm text-dai cursor-pointer hover:text-azul-brillante animation-all duration-300" href="/terms-and-conditions">Términos y Condiciones de Servicio.</a>
        </div>
    </div>
    </div>
</div>
)}
