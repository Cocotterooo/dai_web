---
// Componente para mostrar estadísticas de impresión

interface Props {
    thisMonth?: number;
    total?: number;
    limit?: number;
    percentage?: number;
}

const { 
    thisMonth = 24, 
    total = 156, 
    limit = 40, 
    percentage = 60, 
} = Astro.props;
---

<div class="bg-white/5 border border-white/20 rounded-xl p-4 flex flex-col justify-between h-full">
    <div>
        <h3 class="font-semibold text-lg text-white mb-2">Impresiones</h3>
        <div class="space-y-2">
            <div class="flex justify-between">
                <span class="text-gray-300 text-sm">Este mes:</span>
                <span class="text-azul-brillante font-bold">{thisMonth}</span>
            </div>
            <div class="flex justify-between">
                <span class="text-gray-300 text-sm">Total:</span>
                <span class="text-white font-bold">{total}</span>
            </div>
        </div>
    </div>
    <div class="mt-4">
        <div class="w-full bg-white/10 rounded-full h-2">
            <div class="bg-azul-brillante h-2 rounded-full" style={`width: ${percentage}%`}></div>
        </div>
        <p class="text-xs text-gray-400 mt-1">Límite mensual: {limit}</p>
    </div>
</div>
