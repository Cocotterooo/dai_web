---
import X from "@/assets/social/x.svg";
import Discord from "@/assets/social/discord.svg";
import Instagram from "@/assets/social/instagram.svg";
import TikTok from "@/assets/social/tiktok.svg";
import Linkedin from "@/assets/social/linkedin.svg";
import DAILogo from "@/assets/icons/dai/dai_blanco.svg";
import EmailCopy from "@/components/members/emailCopy.astro";
import PhoneCopy from "@/components/members/phoneCopy.astro";
---

<div class="flex flex-col w-full items-center gap-8 px-4 sm:px-8 lg:px-16 xl:px-24 2xl:px-32">
    <div class="grid z-2 grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-6 w-full max-w-7xl p-6 lg:p-8">
        <div class="col-span-1 md:col-span-2 lg:col-span-1 flex flex-col items-center lg:items-start">
            <DAILogo class="w-24 h-24 lg:w-30 lg:h-30 mb-4 text-dai fill-dai stroke-dai"/>
            <h1 class="text-xl lg:text-2xl font-bold text-white text-center lg:text-left leading-tight">Delegación de Alumnos de Industriales</h1>
        </div>
        <div class="flex flex-col text-white/90 text-sm lg:text-base">
            <h1 class="font-bold text-lg lg:text-xl text-azul-brillante mb-3 text-center lg:text-left">PÁGINAS</h1>
            <div class="ml-0 lg:ml-0.5 flex flex-col font-extralight border-l-0 lg:border-l-2 border-azul-brillante pl-0 lg:pl-3 space-y-2">
                <a href="/services" class="hover:text-azul-brillante transition-all duration-300 text-center lg:text-left">Servicios</a>
                <a href="/help" class="hover:text-azul-brillante transition-all duration-300 text-center lg:text-left">Ayuda</a>
                <a href="/about" class="hover:text-azul-brillante transition-all duration-300 text-center lg:text-left">Sobre Nosotros</a>
                <a href="/members" class="hover:text-azul-brillante transition-all duration-300 text-center lg:text-left">Nuestros Miembros</a>
                <a href="/san-pepe" class="hover:text-azul-brillante transition-all duration-300 text-center lg:text-left">San Pepe</a>
                <a href="/laws" class="hover:text-azul-brillante transition-all duration-300 text-center lg:text-left">Normativas</a>
            </div>
        </div>
        <div class="flex flex-col text-white">
            <h1 class="font-bold text-lg lg:text-xl text-azul-brillante mb-3 text-center lg:text-left">CONTACTO</h1>
            <div class="ml-0 lg:ml-0.5 flex flex-col font-extralight text-white/90 text-sm lg:text-base border-l-0 lg:border-l-2 border-azul-brillante pl-0 lg:pl-3 space-y-2 items-center lg:items-start">
                <EmailCopy email="delegacion@dai.uvigo.gal" className="text-white/90 text-sm lg:text-base cursor-pointer text-center lg:text-left" />
                <PhoneCopy phone="+34 986 81 22 14" label="Tlf. Campus" className="text-white/90 text-sm lg:text-base cursor-pointer text-center lg:text-left" />
                <PhoneCopy phone="+34 986 81 22 14" label="Tlf. Ciudad" className="text-white/90 text-sm lg:text-base cursor-pointer text-center lg:text-left" />
                <PhoneCopy phone="+34 986 81 22 14" label="WhatsApp" className="text-white/90 text-sm lg:text-base cursor-pointer text-center lg:text-left" />
            </div>
        </div>
        <div class="flex flex-col text-white">
            <h1 class="font-bold text-lg lg:text-xl text-azul-brillante mb-3 text-center lg:text-left">DERECHOS</h1>
            <div class="ml-0 lg:ml-0.5 flex flex-col text-white/90 text-sm lg:text-base hover:text-azul-brillante transition-all duration-300 border-l-0 lg:border-l-2 border-azul-brillante pl-0 lg:pl-3">
                <a href="/terms-and-conditions" class="text-center lg:text-left">Términos y Condiciones de servicio</a>
            </div>
        </div>
    </div>
    <div class="z-2 w-full max-w-6xl border-b-2 border-azul-brillante/70 mx-4 lg:mx-0"></div>
    <div class="flex z-2 flex-col items-center gap-4 mb-6 text-white px-4">
        <p class="text-sm lg:text-base text-center">© Todos los derechos reservados</p>
        <div class="flex z-2 flex-row gap-6 lg:gap-8 text-white">
            <a href="https://discord.gg/rHC4rgZvqM" target="_blank" class="hover:scale-110 transition-transform duration-300">
                <Discord class="w-8 h-8 lg:w-9 lg:h-9" />
            </a>
            <a href="https://www.instagram.com/dai_uvigo/" target="_blank" class="hover:scale-110 transition-transform duration-300">
                <Instagram class="w-8 h-8 lg:w-9 lg:h-9" />
            </a>
            <a href="https://twitter.com/dai_uvigo" target="_blank" class="hover:scale-110 transition-transform duration-300">
                <X class="w-8 h-8 lg:w-9 lg:h-9" />
            </a>
            <a href="https://www.linkedin.com/company/dai-uvigo" target="_blank" class="hover:scale-110 transition-transform duration-300">
                <Linkedin class="w-8 h-8 lg:w-9 lg:h-9" stroke="currentColor"/>
            </a>
            <a href="https://www.tiktok.com/@dai.uvigo/" target="_blank" class="hover:scale-110 transition-transform duration-300">
                <TikTok class="w-8 h-8 lg:w-9 lg:h-9" stroke="currentColor"/>
            </a>
        </div>
    </div>
</div>


